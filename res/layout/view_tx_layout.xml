<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffff" >

    <LinearLayout
        android:id="@+id/info_panel"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/info_panel_bg"
        android:gravity="right"
        android:orientation="horizontal"
        android:paddingBottom="5dip"
        android:paddingRight="5dip"
        android:paddingTop="5dip" >

        <ImageButton
            android:id="@+id/reminder_tx_btn"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:background="@drawable/reminder_selector"
            android:gravity="center"
            android:onClick="@string/add_rem_action"
            android:paddingLeft="5dip" />

        <ImageButton
            android:id="@+id/edit_tx_btn"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:background="@drawable/edit_selector"
            android:gravity="center"
            android:paddingLeft="5dip" />

        <ImageButton
            android:id="@+id/del_tx_btn"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:background="@drawable/delete_selector"
            android:gravity="center"
            android:onClick="@string/delete_tx_action"
            android:paddingLeft="5dip" />
    </LinearLayout>

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/info_panel"
        android:layout_weight="1"
        android:padding="2pt"
        android:stretchColumns="1" >

        <TableRow >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:padding="5px"
                android:text="@string/from_acct_lbl"
                android:textColor="#000000"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/from_acct_val"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:gravity="right"
                android:padding="5px"
                android:textColor="#000000" />
        </TableRow>

        <TableRow >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:padding="5px"
                android:text="@string/to_acct_lbl"
                android:textColor="#000000"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/to_acct_val"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:gravity="right"
                android:padding="5px"
                android:textColor="#000000" />
        </TableRow>

        <TableRow >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:padding="5px"
                android:text="@string/date_lbl"
                android:textColor="#000000"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tx_date_val"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:gravity="right"
                android:padding="5px"
                android:textColor="#000000" />
        </TableRow>

        <TableRow >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:padding="5px"
                android:text="@string/tx_amt_lbl"
                android:textColor="#000000"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tx_amt_val"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:gravity="right"
                android:padding="5px"
                android:textColor="#000000" />
        </TableRow>

        <TableRow >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_span="2"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="50"
                        android:padding="5px"
                        android:text="@string/tx_tags_lbl"
                        android:textColor="#000000"
                        android:textStyle="bold" />

                    <ImageButton
                        android:id="@+id/attachmnt_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/attachment"
                        android:gravity="center"
                        android:layout_gravity="right"
                        android:paddingLeft="5dip" />

                    <!-- TextView
                        android:id="@+id/attchmnt_val"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="50"
                        android:gravity="right"
                        android:padding="5px"
                        android:textColor="#000000"
                        android:visibility="visible" /-->
                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="2dip"
                    android:background="#C0C0C0" />

                <TextView
                    android:id="@+id/tx_tags_tf"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.8"
                    android:gravity="top"
                    android:minLines="5"
                    android:padding="5px"
                    android:textColor="#000000" />
            </LinearLayout>
        </TableRow>
    </TableLayout>

</RelativeLayout>