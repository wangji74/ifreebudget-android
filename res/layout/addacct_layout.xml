<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#ffffff" >

        <LinearLayout
            android:id="@+id/info_panel"
            android:layout_width="fill_parent"
            android:layout_height="60dip"
            android:background="@color/info_panel_bg"
            android:orientation="vertical"
            android:paddingBottom="5dip"
            android:paddingRight="5dip"
            android:paddingTop="5dip" >

            <RelativeLayout
                android:id="@+id/title_panel"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/title_lbl"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:clickable="true"
                    android:gravity="center_vertical"
                    android:onClick="@string/goto_home"
                    android:paddingLeft="5dip"
                    android:text="@string/add_acct_title_lbl"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:id="@+id/button_panel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:gravity="fill_vertical"
                    android:orientation="horizontal" >

                    <ImageButton
                        android:id="@+id/add_tx_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/document_save_selector"
                        android:gravity="center"
                        android:onClick="@string/save_account" />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/subtitle_lbl"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/info_panel"
            android:background="@color/sub_title_color"
            android:padding="5dip"
            android:textColor="#000000" />

        <LinearLayout
            android:id="@+id/an_panel"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/subtitle_lbl"
            android:orientation="vertical"
            android:padding="5dip" >

            <TextView
                android:id="@+id/name_lbl"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/acct_name_lbl"
                android:textColor="#000000" />

            <EditText
                android:id="@+id/acct_name_tf"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:editable="true"
                android:singleLine="true" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/anum_panel"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/an_panel"
            android:orientation="vertical"
            android:padding="5dip" >

            <TextView
                android:id="@+id/num_lbl"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/acct_name_tf"
                android:text="@string/acct_number_lbl"
                android:textColor="#000000" />

            <EditText
                android:id="@+id/acct_number_tf"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/num_lbl"
                android:editable="true"
                android:singleLine="true" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/sb_panel"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/anum_panel"
            android:orientation="vertical"
            android:padding="5dip" >

            <TextView
                android:id="@+id/start_bal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/acct_number_tf"
                android:text="@string/acct_start_bal_lbl"
                android:textColor="#000000" />

            <EditText
                android:id="@+id/acct_start_bal_tf"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/start_bal"
                android:editable="true"
                android:numeric="decimal"
                android:singleLine="true" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/notes_panel"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/sb_panel"
            android:orientation="vertical"
            android:padding="5dip" >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/acct_notes_lbl"
                android:textColor="#000000" />

            <EditText
                android:id="@+id/acct_notes_tf"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:editable="true"
                android:gravity="top"
                android:minLines="5"
                android:padding="6dip" />
        </LinearLayout>
    </RelativeLayout>

</ScrollView>