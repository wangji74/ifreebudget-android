<ScrollView
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:fillViewport="true">
	<RelativeLayout
		android:id="@+id/add_reminder_layout"
		android:layout_width="fill_parent"
		android:layout_height="36dip"
		android:background="#ffffff">
		<LinearLayout
			android:id="@+id/info_panel"
			android:orientation="vertical"
			android:layout_width="fill_parent"
			android:layout_height="36dip"
			android:background="@color/info_panel_bg"
	        android:paddingBottom="2dip"
    	    android:paddingRight="2dip"
        	android:paddingTop="2dip" >
			<RelativeLayout
				android:id="@+id/title_panel"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content">
				<TextView
					android:id="@+id/title_lbl"
					android:text="@string/add_rem_title_lbl"
					android:layout_width="wrap_content"
					android:layout_height="fill_parent"
					android:textStyle="bold"
					android:textSize="13sp"
					android:gravity="center_vertical"
					android:paddingLeft="5dip"
					android:textColor="#FFFFFF"
					android:clickable="true"
					android:onClick="@string/goto_home" />
				<LinearLayout
					android:id="@+id/button_panel"
					android:orientation="horizontal"
					android:gravity="fill_vertical"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_alignParentRight="true">
					<ImageButton
						android:id="@+id/add_tx_btn"
						android:layout_width="32dip"
						android:layout_height="32dip"
						android:background="@drawable/document_save_selector"
						android:gravity="center"
						android:onClick="@string/save_reminder_action"/>
				</LinearLayout>
			</RelativeLayout>
		</LinearLayout>
		<LinearLayout
			android:id="@+id/name_panel"
			android:orientation="vertical"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_below="@id/info_panel"
			android:padding="5dip">
			<TextView
			    style="@style/SimpleTextView"
				android:text="@string/title_lbl"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:paddingLeft="5dip"/>
			<EditText
			    style="@style/SimpleEditText"
				android:id="@+id/rem_title_tf"
				android:layout_height="wrap_content"
				android:layout_width="fill_parent"
				android:padding="5dip"/>
		</LinearLayout>
		<LinearLayout
			android:id="@+id/reminder_dates_panel"
			android:orientation="vertical"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:padding="5dip"
			android:layout_below="@id/name_panel">
			<TableLayout
				android:layout_width="fill_parent"
				android:layout_height="wrap_content">
				<TableRow>
					<TextView
					    style="@style/SimpleTextView"
						android:text="@string/Start"
						android:paddingLeft="5dip"
						android:gravity="center_vertical|center_horizontal"
						android:layout_gravity="center_vertical|center_horizontal|center"
						android:layout_height="wrap_content"
						android:layout_width="wrap_content" />
					<Button
					    style="@style/SimpleButton"
						android:id="@+id/start_date_btn"
						android:layout_height="wrap_content"
						android:layout_width="wrap_content"
						android:gravity="center_vertical|right"
						android:layout_gravity="right" />
					<Button
					    style="@style/SimpleButton"
						android:id="@+id/start_time_btn"
						android:layout_height="wrap_content"
						android:layout_width="wrap_content"
						android:gravity="center_vertical|right"
						android:layout_gravity="right" />
				</TableRow>
				<TableRow>
					<TextView
					    style="@style/SimpleTextView"
						android:text="@string/End"
						android:paddingLeft="5dip"
						android:gravity="center_vertical"
						android:layout_gravity="center_vertical"
						android:layout_height="wrap_content"
						android:layout_width="wrap_content" />
					<Button
					    style="@style/SimpleButton"
						android:id="@+id/end_date_btn"
						android:layout_height="wrap_content"
						android:layout_width="wrap_content"
						android:gravity="center_vertical|right"
						android:layout_gravity="right" />
					<Button
					    style="@style/SimpleButton"
						android:id="@+id/end_time_btn"
						android:layout_height="wrap_content"
						android:layout_width="wrap_content"
						android:gravity="center_vertical|right"
						android:layout_gravity="right" />
				</TableRow>
			</TableLayout>
		</LinearLayout>
		<View
			android:id="@+id/spacer"
			android:layout_width="fill_parent"
			android:layout_height="2dip"
			android:background="#c0c0c0"
			android:layout_below="@id/reminder_dates_panel" />
		<LinearLayout
			android:id="@+id/repeat_type_panel"
			android:orientation="vertical"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:padding="5dip"
			android:layout_below="@id/spacer">
			<TextView
			    style="@style/SimpleTextView"
				android:text="@string/repeats_lbl"
				android:paddingLeft="5dip"
				android:textColor="#000000"
				android:layout_gravity="center_vertical|center_horizontal"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content" />
			<RadioGroup
				android:id="@+id/sch_type_group"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:gravity="center_horizontal"
				android:layout_gravity="center_vertical|center_horizontal"
				android:orientation="horizontal">
				<RadioButton
					android:id="@+id/daily_btn"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textColor="#000000"
					android:text="@string/repeat_daily" />
				<RadioButton
					android:id="@+id/weekly_btn"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textColor="#000000"
					android:text="@string/repeat_weekly" />
				<RadioButton
					android:id="@+id/monthly_btn"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textColor="#000000"
					android:text="@string/repeat_monthly" />
			</RadioGroup>
		</LinearLayout>
		<LinearLayout
			android:id="@+id/repeat_info_panel"
			android:orientation="vertical"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:padding="5dip"			
			android:layout_below="@id/repeat_type_panel">
		</LinearLayout>
	</RelativeLayout>
</ScrollView>