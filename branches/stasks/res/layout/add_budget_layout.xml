<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffff" >

    <LinearLayout
        android:id="@+id/info_panel"
        android:layout_width="fill_parent"
        android:layout_height="60dip"
        android:background="@color/info_panel_bg"
        android:orientation="vertical"
        android:paddingBottom="5dip"
        android:paddingRight="5dip"
        android:paddingTop="5dip" >

        <RelativeLayout
            android:id="@+id/title_panel"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/title_lbl"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:clickable="true"
                android:gravity="center_vertical"
                android:onClick="@string/goto_home"
                android:paddingLeft="5dip"
                android:text="@string/alloc_budget_amts_title"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/button_panel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:gravity="fill_vertical"
                android:orientation="horizontal" >

                <ImageButton
                    android:id="@+id/add_budget_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/document_save_selector"
                    android:gravity="center"
                    android:onClick="@string/save_budget_action" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/budget_details_panel"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/info_panel"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/budget_name_lbl"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@color/sub_title_color"
            android:padding="5dip"
            android:textColor="#000000"
            android:textStyle="bold" 
            android:gravity="left"/>
        <TextView
            android:id="@+id/budget_amt_lbl"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@color/sub_title_color"
            android:padding="5dip"
            android:textColor="#000000"
            android:textStyle="bold" 
            android:gravity="right"/>
        </LinearLayout>

    <GridView
        android:id="@+id/budget_accts_grid"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/budget_details_panel"
        android:columnWidth="60dp"
        android:gravity="center_vertical|center_horizontal"
        android:horizontalSpacing="10dp"
        android:numColumns="2"
        android:padding="10dp"
        android:stretchMode="columnWidth"
        android:verticalSpacing="60dp" />

</RelativeLayout>