<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:orientation="vertical"
    android:padding="10dip" >

    <LinearLayout
        android:id="@+id/reminder_details_panel"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_gravity="top"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/recur_icon"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:paddingTop="10dp"
                android:scaleType="fitStart"
                android:src="@drawable/recurring" />
        </LinearLayout>

        <TextView
            android:id="@+id/reminder_details_lbl"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:padding="10dp"
            android:textColor="#000000"
            android:textSize="16sp" >
        </TextView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/edit_reminder_ctrl_panel"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:background="#ffffff"
        android:gravity="right"
        android:orientation="horizontal"
        android:textColor="#000000"
        android:visibility="gone" >

        <TextView
            android:id="@+id/repeat_info_descr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textColor="#000000"
            android:layout_gravity="bottom"
            android:textSize="12sp" />
        
        <Button
            android:id="@+id/del_rem_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="deleteReminder"
            android:text="@string/delete" />
    </LinearLayout>

</LinearLayout>