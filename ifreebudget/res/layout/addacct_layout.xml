<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true">
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#ffffff">
        <TextView
            android:id="@+id/title_lbl"
            android:text="@string/add_acct_title_lbl"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold|italic"
            android:textColor="#FFFFFF"
            android:background="#6F8BBA"
            android:paddingTop="5dip"
            android:paddingBottom="5dip"
            android:layout_alignParentTop="true" />
        <TextView
            android:id="@+id/name_lbl"
            android:text="@string/acct_name_lbl"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:layout_below="@id/title_lbl" />
        <EditText
            android:id="@+id/acct_name_tf"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:editable="true"
            android:layout_below="@id/name_lbl" />
        <TextView
            android:id="@+id/num_lbl"
            android:text="@string/acct_number_lbl"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:layout_below="@id/acct_name_tf" />
        <EditText
            android:id="@+id/acct_number_tf"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:editable="true"
            android:layout_below="@id/num_lbl" />
        <TextView
            android:id="@+id/start_bal"
            android:text="@string/acct_start_bal_lbl"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:layout_below="@id/acct_number_tf" />
        <EditText
            android:id="@+id/acct_start_bal_tf"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:editable="true"
            android:numeric="decimal"
            android:layout_below="@id/start_bal" />
        <LinearLayout
            android:id="@+id/notes_panel"
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/acct_start_bal_tf">
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/acct_notes_lbl"
                android:textColor="#000000" />
            <EditText
                android:id="@+id/acct_notes_tf"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:minLines="5"
                android:editable="true"
                android:gravity="top" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">
            <Button
                android:id="@+id/save_button"
                android:layout_height="wrap_content"
                android:text="@string/save"
                android:layout_weight="1.0"
                android:layout_width="0dip"
                android:onClick="@string/save_account" />
            <Button
                android:id="@+id/cancel_button"
                android:layout_height="wrap_content"
                android:text="@string/cancel"
                android:layout_weight="1.0"
                android:layout_width="0dip"
                android:onClick="@string/cancel_action" />
        </LinearLayout>
    </RelativeLayout>
</ScrollView>
